
<div class="container">
 <div class="row">
   <div class="col-12 col-sm-6 trip-list">
     <h3>Past Trips</h3>
     {{#if pastLogged}}
       {{#each pastTrips as |trip|}}
       <div class="trip">
         <h4 class="trip-show-button" data-trip="{{trip._id}}">{{limit trip.title 20}}</h4>
         <p><strong>Destination:</strong> {{limit trip.destination 25}}</p>
         <p><strong>Category:</strong> {{trip.category}}</p>
         <p><strong>Date:</strong> {{trip.date}}</p>
         <p><strong>Duration (Days):</strong> {{trip.duration}}</p>
         <p><strong>Budget:</strong> ${{trip.budget}}</p>
         <p><strong>Status:</strong> {{trip.status}}</p>
         <button data-id="{{trip._id}}" class="btn btn-outline-info trip-edit">Edit Trip &#9998;</button>

         <!-- Button trigger modal -->
         <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#delete-modal-{{trip._id}}">
           Delete Trip &#x1F5D1;
         </button>

         <!-- Modal -->
         <!-- Removed fade class from modal to get around dimmed screen bug -->
         <div class="modal fade" id="delete-modal-{{trip._id}}" tabindex="-1" role="dialog" aria-labelledby="modal-{{trip.id}}-label" aria-hidden="true">
           <div class="modal-dialog" role="document">
             <div class="modal-content">
               <div class="modal-header">
                 <h5 class="modal-title" id="modal-{{trip.id}}-label">Delete {{trip.title}}</h5>
                 <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                   <span aria-hidden="true">&times;</span>
                 </button>
               </div>
               <div class="modal-body">
                 Are you sure you want to delete "{{trip.title}}"? Once deleted, trip data cannot be recovered.
               </div>
               <div class="modal-footer">
                 <button type="button" class="btn btn-secondary" data-dismiss="modal">Go Back</button>
                 <button type="button" class="btn btn-danger trip-delete" data-dismiss="modal" data-id="{{trip._id}}">Delete Trip</button>
               </div>
             </div>
           </div>
         </div>
         <!-- End Modal Content -->

       </div>
       {{/each}}
     {{else}}
      <div class="trip">
        <h5>No Past Trips Logged...</h5>
        <h5>Log a Past Trip Above!</h5>
      </div>
     {{/if}}
   </div>
   <div class="col-12 col-sm-6 trip-list">
     <h3>Future Trips</h3>
     {{#if futureLogged}}
       {{#each futureTrips as |trip|}}
       <div class="trip">
         <h4 class="trip-show-button" data-trip="{{trip._id}}">{{limit trip.title 20}}</h4>
